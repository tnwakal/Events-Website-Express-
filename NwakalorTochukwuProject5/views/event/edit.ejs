<%- include('../partials/header.ejs')%>
    
    <form method = "POST" action = "/events/<%= event.id%>?_method=PUT" enctype="multipart/form-data" class="event-form">
        <label for="title" >Title</label>
        <input type="text" id="title" name="title" value = "<%= event.title%>">
        
        <label for="details">Details</label>
        <textarea rows="5" id="details" name="details" class = "fixed-width"><%= event.details%></textarea>

        <label for="category">Category:</label>
                <select id="category" name="category" value="<%= event.category%>">
                    <option value="Gaming">Gaming</option>
                    <option value="Technology">Technology</option>
                    <option value="Sports">Sports</option>
                    <option value="Other">Other</option>
                </select><br><br>

                <label for="location">Where</label>
                <input type="text" id="location" name="location" value="<%= event.location%>"><br><br>
    
                <label for="startDateTime">Start</label>
                <input type="datetime-local" id="startDateTime" name="startDateTime" value="<%= event.startDateTime%>"><br><br>
    
                <label for="endDateTime">End</label>
                <input type="datetime-local" id="endDateTime" name="endDateTime" value="<%= event.endDateTime%>"><br><br>
    
                <label for="eventImage">Event Image:</label>
                <input type="file" id="eventImage" name="eventImage" accept="image/*"><br><br>
    
                <input type="submit" value="Submit">
     
      
    </form>

    </div>
    <%- include('../partials/footer.ejs')%>
